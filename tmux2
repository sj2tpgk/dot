####FILE +x bin/xcopy {{{
#| #!/bin/sh
#| 
#| text=$*
#| 
#| wsl_copy() {
#|     # win32yank -i; return
#|     cd /
#| 
#|     magic=ac7i6ma0
#|     tmpdir=/tmp/wslclip
#|     [ ! -d "$tmpdir" ] && mkdir -p "$tmpdir"
#|     pidfile="$tmpdir/copy_pid"
#|     inputfile="$tmpdir/copy_input"
#|     oninitfile="$tmpdir/copy_oninit"
