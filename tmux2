####FILE +x bin/im-diff {{{
#| #!/bin/sh
#| [ $# -eq 0 ] && { echo "Usage: $0 image1 image2 [fuzz%] [outfile]"; exit 1; }
#| image1=$1
#| image2=$2
#| fuzz=${3:-10%}
