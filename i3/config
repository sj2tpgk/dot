bindsym Ctrl+s mode "alpha"

mode "alpha" {
  bindsym Return mode "default"
  bindsym Escape mode "default"

  bindsym t exec urxvt ;mode"default"
  bindsym d exec command -v dmenu_run && dmenu_run ;mode"default"

  bindsym p workspace prev ;mode"default"
  bindsym n workspace next ;mode"default"
  bindsym P move container to workspace prev; workspace prev ;mode"default"
  bindsym N move container to workspace next; workspace next ;mode"default"

  bindsym q kill ;mode"default"

  bindsym 1 workspace 1;mode"default"
  bindsym 2 workspace 2;mode"default"
  bindsym 3 workspace 3;mode"default"
  bindsym 4 workspace 4;mode"default"

  bindsym 7 move container to workspace 1;mode"default"
  bindsym 8 move container to workspace 2;mode"default"
  bindsym 9 move container to workspace 3;mode"default"
  bindsym 0 move container to workspace 4;mode"default"

  bindsym r reload
}

# Bar
bar {
  status_command i3status
}

