#!/bin/sh

has(){
    command -v "$1" >/dev/null 2>&1
}

show(){
    path="$1"
    case "$path" in
        (!*) path=$(command -v "${path#?}") ;;
    esac
    # output is piped etc
    if ! [ -t 1 ]; then
        cat "$path"
        return
    fi
    case "$path" in
        (*.html|*.htm|*.php) has w3m && { w3m -dump -T text/html -cols "$(tput cols)" "$path"; return; } ;;
        (*.csv) awk -F,    '{for(i=1;i<=NF;i++)printf"%s\033[3%dm"$i,(i>=2?FS:""),(i-1)%7+1;print""}END{printf"\033[0m"}' "$path"; return ;;
        (*.tsv) awk -F'\t' '{for(i=1;i<=NF;i++)printf"%s\033[3%dm"$i,(i>=2?FS:""),(i-1)%7+1;print""}END{printf"\033[0m"}' "$path"; return ;;
    esac
    # do not use exec to invoke highlight to etc (show() can be called multiple times)
    if has highlight; then
        name=${path##*/}
        args=
        case "$name" in
            (Dockerfile*) args="-S dockerfile" ;;
            (Makefile*|[jJ]ustfile*) args="-S makefile" ;;
            (*.service|*.automount|*.link|*.mount|*.network|*.path|*.slice|*.socket|*.target|*.timer) args="-S conf" ;; # systemd
            (*)
                case "$path" in
                    (/etc/netctl/*) args="-S conf" ;;
                esac ;;
        esac
        highlight --out-format ansi --stdout --force $args "$path"
    elif has bat; then
        bat --theme ansi -p -P "$path"
    else
        cat "$path"
    fi
}

case $# in
    (0) cat ;;
    (1) show "$@" ;;
    (*) echo "Usage: $0 [[!]file]" ; exit 1 ;;
esac
