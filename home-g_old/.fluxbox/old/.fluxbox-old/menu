[begin] (Fluxbox)
  [exec] (Urxvt) {urxvt}
  [exec] (Terminator) {terminator -p tpd85g}
  [exec] (Pale Moon) {palemoon}
  [exec] (Mount) {lilyterm -u ~/.config/lilyterm/my1.conf -e sudo ~/sucripts/mounter}
  [reconfig] (Reconfigure)
  [config] (FB Config)
  [submenu] (FB default) {Fluxbox Default}
    [include] (/etc/X11/fluxbox/fluxbox-menu)
  [end]
  [submenu] (Network) {Network Actions}
    [exec] (Connect to Home WiFi) {sudo ~/sucripts/myifup}
    [exec] (Disable WiFi) {sudo ~/sucripts/myifdn}
  [end]
  [submenu] (Exit...) {Actions}
    [exec] (Shutdown) {sudo ~/sucripts/myshutdown}
    [exec] (Suspend) {systemctl suspend}
    [exec] (Hibernare) {systemctl hibernate}
    [exit] (Exit Fluxbox)
    [exec] (Reboot) {sudo ~/sucripts/myreboot}
  [end]
[end]
